<div style="margin-bottom: 100px;" class="mt-4">
    <div class="row">
        {{#each courses }}
        <div class="col-sm-6 col-lg-4 mt-2">
            <div style="min-height: 490px;" class="card">
                <a href="/courses/{{this.slug}}">
                    <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.descriptions}}</p>
                    <a href="#" class="btn btn-primary">Learn Now</a>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>