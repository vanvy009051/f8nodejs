<div class="mt-4">
    <h3>Đăng khoá học</h3>
    <form method="POST" action="/courses/store">
        <div class="form-group">
            <label for="name">Tên khoá học</label>
            <input name="name" type="text" class="form-control" id="name">
        </div>
        <div class="form-group">
            <label for="descriptions">Mô tả</label>
            <input name="descriptions" type="text" class="form-control" id="descriptions">
        </div>
        <div class="form-group">
            <label for="videoId">Video Id</label>
            <input name="videoId" type="text" class="form-control" id="videoId">
        </div>
        <div class="form-group">
            <label for="level">Level</label>
            <input name="level" type="text" class="form-control" id="level">
        </div>
        <button type="submit" class="btn btn-primary">Thêm khoá học</button>
    </form>
</div>