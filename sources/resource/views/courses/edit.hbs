<div class="mt-4">
    <h3>Cập nhật khoá học</h3>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên khoá học</label>
            <input name="name" type="text" class="form-control" value="{{course.name}}" id="name">
        </div>
        <div class="form-group">
            <label for="descriptions">Mô tả</label>
            <textarea name="descriptions" class="form-control" id="descriptions">{{course.descriptions}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video Id</label>
            <input name="videoId" type="text" class="form-control" value="{{course.videoId}}" id="videoId">
        </div>
        <div class="form-group">
            <label for="level">Level</label>
            <input name="level" type="text" class="form-control" value="{{course.level}}" id="level">
        </div>
        <button type="submit" class="btn btn-primary">Cập nhật khoá học</button>
    </form>
</div>